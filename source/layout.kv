#Naming conventions of the KV file:
#-must be lowercase
#-filename must be the name of the main class (which is called in the build method)
#-if main class ends in "app", the filename must not contain the "app" part
#Location: must be in the same directory as the python script

WindowManager:

    MainPage:
        name: 'main'
        id: main

    SettingsPage:
        name: 'settings'
        id: settings

<MainPage>:

    RelativeLayout:

        orientation: 'vertical'

   #     Widget:
   #         id: cameraPreview
   #         canvas:
   #             Color:
   #                 rgba: (200/255, 255/255, 255/255, 255/255)
   #             Rectangle:
   #                 group: 'display'
   #                 size: (root.width, root.height)
   #                 pos: -self.center_x/2 ,-self.center_y/2

        Button:
            id: saveImgBtn
            text: 'Save Image'
            background_normal: ''
            background_color: (0, 0, 0, 0)
            canvas:
                Color:
                    rgba: (140/255, 0, 0, 140/255) if self.state == 'normal' else (0, 100/255, 0, 140/255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
            size_hint: (0.1, 0.1)
            pos_hint: {'center_x':0.5, 'center_y':0.2}
            on_press:
                root.captureImage()

        Button:
            text: ''
            background_normal: 'img/settings_cog.png'
            background_down: 'img/settings_cog.png'
            size_hint: (0.1, 0.1)
            pos_hint: {'center_x': 0.05, 'center_y': 0.95}
            on_press:
                app.root.current = 'settings'
                root.manager.transition.direction = 'left'

<SettingsPage>:

    canvas:
        Color:
            rgba: (255/255, 255/255, 255/255, 255/255)
        Rectangle:
            size: self.size
            pos: self.pos

    RelativeLayout:
        orientation: 'vertical'

        Button:
            text: ''
            background_normal: 'img/settings_cog.png'
            background_down: 'img/settings_cog.png'
            size_hint: (0.1, 0.1)
            pos_hint: {'center_x': 0.05, 'center_y': 0.95}
            on_press:
                app.root.current = 'main'
                root.manager.transition.direction = 'right'

